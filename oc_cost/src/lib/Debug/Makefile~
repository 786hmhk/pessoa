

.SUFFIXES: .o .cpp


CXX	 = g++
CXXFLAGS = -g -O3 -Wall -mtune=native -malign-double -DHAVE_IEEE_754 -DBSD
LDFLAGS	 =


CUDD_DIR = 
INCLUDE  = $(CUDD_DIR)/include


SRC = main.cpp ShortestPath.cpp cuddObj.cpp
HDR = main.hh ShortestPath.hh
SRC_LOC = ../main.cpp ../ShortestPath.cpp ../cuddObj.cpp
HDR_LOC = ../main.hh ../ShortestPath.hh
OBJ = $(SRC:.cpp=.o)

#LIBS := -lcudd -lm -lepd -lmtr -lst -lutil
LIBS = $(CUDD_DIR)/cudd/libcudd.a $(CUDD_DIR)/mtr/libmtr.a \
	$(CUDD_DIR)/st/libst.a $(CUDD_DIR)/util/libutil.a $(CUDD_DIR)/epd/libepd.a





$(OBJ): $(SRC_LOC) $(HDR_LOC)

.cpp.o:
	$(CXX) -c  $< -I$(INCLUDE) $(CXXFLAGS) $(DDDEBUG)

all: oc_sp_cpp

oc_sp_cpp: $(SRC_LOC) $(OBJ) $(HDR_LOC)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@ $(OBJ) $(LIBS) -lm
	@echo "\n\n Compilation Success!\n Executable of the oc_sp example is located at the src folder. \n"


RM = rm -rf
clean:
	-@echo Cleaning Project ...
	-@$(RM) *.o oc_sp *.dot

distclean : clean

.PHONY: all clean distclean
